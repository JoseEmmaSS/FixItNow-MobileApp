<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    tools:context=".Servicios">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Servicio"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de servicio:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etTipoServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Tipo de servicio"
        android:textColor="#000000"
        android:textColorHint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Costo del servicio:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etCostoServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Costo del servicio"
        android:textColorHint="@color/black"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Número de teléfono:"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/etNumeroTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:hint="Número de teléfono"
        android:textColorHint="@color/black"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar" />

    <Button
        android:id="@+id/btnActualizarServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar servicio" />

</LinearLayout>
